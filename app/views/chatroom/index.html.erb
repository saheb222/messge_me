<h2 class="ui center aligned icon header">
  <i class="orange circular chat icon"></i>
  ChatRoom
</h2>

<div class="ui two column grid">
<!-- chat box started -->
	<div class="ten wide column">
		<div class="ui fluid raised card chatbox">
			<div class="content">
				<div class="ui feed">
					<%= render @messages %>
				</div>
			</div>
			<div class="extra content"> 
				<div class="ui form">
				  <div class="field">
				  	<div class="ui icon fluid input">
				  		<input type="text", placeholder="Type something">
				      <i class="bordered inverted orange icon edit"></i>
				    </div>
				  </div>
				</div>
			</div>
		</div>
	</div>
	<!-- online status box started -->
	<div class="six wide column">
		<div class="ui card chatbox">
			<div class="content">
				<div class="ui inverted vertical menu">
				  <a class="active item">
				    User1
				  </a>
				  <a class="item">
				    User2
				  </a>
				  <a class="item">
				    User3
				  </a>
				</div>
			</div>
		</div>
	</div>
</div>